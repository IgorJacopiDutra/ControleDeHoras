<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reinaldo.tcc.activity.AdicionarWifiActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout7"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvOu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edAddWifi"
            android:layout_width="284dp"
            android:layout_height="57dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tvOu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="OU"
        app:layout_constraintBottom_toTopOf="@+id/btnPegarWifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/btnPegarWifi"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Atual"
        app:layout_constraintBottom_toTopOf="@+id/tvDescricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOu"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        android:gravity="center"
        android:text="Caso você esteja conectado a um wifi e deseja adiciona-lo, clique no botão ATUAL"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/tvResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPegarWifi"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:gravity="center"
        android:text="*-*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescricao" />

    <Spinner
        android:id="@+id/spn_locais"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQualLocal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="374dp" />

    <TextView
        android:id="@+id/tvQualLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        android:text="Qual Local esse Wifi se refere?"
        app:layout_constraintBottom_toTopOf="@+id/spn_locais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResultado"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="348dp" />
</android.support.constraint.ConstraintLayout>
